# 1Password MCP Server Configuration
# Copy this file to .env and configure for your environment

# Required: 1Password Service Account Token
# Get this from 1Password Developer Console: https://developer.1password.com/
OP_SERVICE_ACCOUNT_TOKEN=ops_your_service_account_token_here

# Optional: Default vault name (defaults to first accessible vault)
SECURITY_DEFAULT_VAULT=AI

# Optional: Environment type (development, staging, production)
ENVIRONMENT=development

# Optional: Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# ðŸš¨ SECURITY WARNING: Destructive Actions (Disabled by default)
# Enables create, update, and delete credential operations
# WARNING: These operations can modify or delete your 1Password credentials
DESTRUCTIVE_ACTIONS=false

# Advanced Configuration (uncomment and modify if needed)
# RATE_LIMIT_MAX_REQUESTS=10
# CIRCUIT_BREAKER_TIMEOUT=30.0
# LOG_FORMAT=json